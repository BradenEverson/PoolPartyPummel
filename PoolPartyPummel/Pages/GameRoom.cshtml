@page
@model PoolPartyPummel.GameRoomModel
@{
    ViewData["Title"] = "GameRoom";
}
<div class="text-center">
    <h1 class="text-info">Your Personal Pool Party</h1>
    <h3 class="text-muted">Code: @Model.joinCode</h3>
</div>
<div class="justify-content-center">
    <canvas id="pool" width="1105" height="500" class="border border-info" style="background-image:url('images/pool.png');text-align:center">
    </canvas>
    <div id="deck" class="card border-danger mb-3">
        <div class="card-body" style="width:100%;height:100%;">
            <h5 class="card-header">Pool Deck:</h5>
            <h6 class="card-subtitle text-muted mb-2" id="usersOnline" style="margin-top:2%">Nobody Online ;(</h6>
            <ul class="list-group list-group-flush" id="chat">

            </ul>
            <div class="input-group">
                <input type="search"  id="message" style="width:600px" class="form-control" placeholder="New Message" />
                <br />
                <button class="btn btn-dark form-control" id="send" onclick="send('@Model.name','@Model.joinCode')">Send!</button>
            </div>
        </div>
    </div>
    <div onclick="join('@Model.joinCode','@Model.name')" id="joiner"></div>
    <audio id="splashAudio">
        <source src="~/audio/splash.mp3" />
    </audio>
    <audio id="poolAmbience">
        <source src="~/audio/poolNoise.mp3" />
    </audio>
    <script src="~/lib/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/gameHub.js"></script>
</div>
<div class="modal fade border-primary" id="alert" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">New User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="body">
                
            </div>
            <div class="modal-footer">
                <button type="button" class="btn border-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>